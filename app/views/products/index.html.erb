<h1>Products Index</h1>

<%= link_to 'New Product', new_product_path%>
<br>
<br>
<%= form_tag products_path, method: :get, authentication: false, id: 'search-form' do %>
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Search" %>
<% end %>

<div id="products">
	<%= render @products %>
</div>

<small>
	<%= page_entries_info @products %>
</small>
<%= paginate @products %>


